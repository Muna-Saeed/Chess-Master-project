/* chessboard.css */

.chessboard {
    display: grid;
    grid-template-columns: repeat(8, minmax(0, 12.5vw)); /* Each column takes up 12.5% of viewport width */
    grid-template-rows: repeat(8, minmax(0, 12.5vh)); /* Each row takes up 12.5% of viewport height */
    width: 80%; /* Occupies 80% of the viewport width */
    max-width: 800px; /* Maximum width to prevent it from becoming too large */
    height: 80vh; /* Occupies 80% of the viewport height */
    max-height: 800px; /* Maximum height to prevent it from becoming too large */
    overflow: hidden; /* Prevent chessboard from extending beyond viewport */
}

.square {
    width: 100%;
    height: 100%;
}

.light {
    background-color: #f0d9b5;
}

.dark {
    background-color: #b58863;
}
